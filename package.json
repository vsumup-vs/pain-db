{
  "name": "vitaledge-platform",
  "version": "1.0.0",
  "description": "VitalEdge - Standards-Driven Clinical Intelligence",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "seed": "node seed.js",
    "seed:production": "node prisma/seed-production.js",
    "seed:rtm": "node seed-rtm-standard.js",
    "seed:standard": "node seed-rtm-standard.js",
    "seed:enhanced": "node seed-robust-enhanced.js",
    "seed:robust": "node seed-robust-enhanced.js",
    "dev": "nodemon index.js",
    "dev:ui": "cd frontend && npm run dev",
    "build:ui": "cd frontend && npm run build",
    "start:all": "node start-servers.js",
    "start:servers": "./start-servers.sh",
    "test": "jest",
    "test:backend": "jest",
    "test:e2e": "playwright test",
    "test:all": "npm run test:backend && npm run test:e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:automation": "node tests/test-automation.js",
    "test:automation:all": "node tests/test-automation.js all",
    "test:automation:controller": "node tests/test-automation.js controller",
    "test:automation:integration": "node tests/test-automation.js integration",
    "test:automation:coverage": "node tests/test-automation.js coverage",
    "test:runner": "./test-runner-backend.sh",
    "test:runner:all": "./test-runner-backend.sh all",
    "test:runner:coverage": "./test-runner-backend.sh coverage",
    "test:runner:watch": "./test-runner-backend.sh watch",
    "test:runner:clean": "./test-runner-backend.sh clean",
    "test:runner:setup": "./test-runner-backend.sh setup",
    "test:validate": "./test-runner-backend.sh validate",
    "monitor": "node performance-monitor.js test",
    "monitor:history": "node performance-monitor.js history",
    "monitor:auto": "./monitor-performance.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "validate-fields": "node validate-field-usage.js",
    "schema:enhance": "./apply-schema-enhancements.sh",
    "schema:verify": "node verify-enhanced-schema.js",
    "docs:schema": "node scripts/generate-schema-reference.js",
    "docs:api": "node scripts/generate-api-docs.js",
    "docs:generate": "node scripts/generate-schema-reference.js && node scripts/generate-api-docs.js"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@playwright/test": "^1.55.1",
    "@types/jest": "^30.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "passport-microsoft": "^2.1.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "uuid": "^13.0.0",
    "validator": "^13.15.15",
    "xss": "^1.0.15"
  },
  "prisma": {
    "seed": "node prisma/seed-production.js"
  }
}
